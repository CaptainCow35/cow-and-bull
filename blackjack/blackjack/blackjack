import random

deck = list(range(2, 10)) * 4
deck += [10]* 4 *4
random.shuffle(deck)
player = deck.pop(0)
dealer = deck.pop(0)

while player < 21 or dealer < 17:

    print(f"Player has {player} \ndealer has {dealer}")

    if input ('do u want to draw a card? y/n: ') == 'y':
        player += deck.pop(0)
        

    if player == 21 :
        print('player wins!!!!!!')
    if dealer == 18:
        ('player wins')
    



    dealer += deck.pop(0)